<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="SauceDemoTesting tests" parallel="tests" thread-count="2">

    <listeners>
        <listener class-name="utils.listeners.TestListener"/>
        <listener class-name="utils.listeners.AnnotationTransformer"/>
    </listeners>

    <test name="Test1">
        <parameter name="browser" value="CHROME"/>
        <classes>
            <class name="tests.Test1"/>
        </classes>
    </test>
    <test name="Test2">
        <parameter name="browser" value="FIREFOX"/>
        <classes>
            <class name="tests.Test2"/>
        </classes>
    </test>


</suite>